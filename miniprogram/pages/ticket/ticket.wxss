/* pages/train/trainList/trainList.wxss */
.date{
  height: 40px;
  background-color: #5495E6;
  display: flex;
  flex-direction: row;
  }

  .date view{
    margin: 0 auto;
    color:#ffffff;
    padding-top: 10px

  }

  .content{
    height: 600px;
    background-color: #f4f4f4;
  }
  .bg{
    width: 95%;
    height: 90px;
    background-color: #ffffff;
    margin: 0 auto;
    border-radius: 5rpx;
    box-shadow: 3px 3px 3px 3px rgb(160, 158, 158);
    margin-top: 10rpx;
    overflow: hidden;
  }
  .item{
    display: flex;
    flex-direction: row;
    padding: 10px;
  }

  .wrApper{
    width: 25%;
    }

    .left{
      text-align: left;
    }
    .center{
      text-align: center;
    }
    .right{
      text-align: right;
      }
      
      .blue{
        color: #5495E6;
        font-weight: bold;
        font-size: 14px;
      }

      .normal{

        color:#000000;
        font-weight: bold;
        font-size: 16px;
      }
      .small{
        font-size: 13px;
        color:#666666;
      }
      .line{
        height: 1px;
        background-color: #cccccc;
        opacity: 1;
        width: 80%;
        margin: 0 auto;
        margin-top: 3px;
        margin-bottom: 3px;
      }

      .buy{
        background-color: rgb(40, 121, 187);
        width: 52px;
        height: 25px;
        line-height: 25px;
        font-size: 12px;
        color:#ffffff;
        text-align: center;
        float:right;
        border-radius: 8px;
        margin-right: 5px;
      }

      .hr{
        height: 1px;
        background-color: #cccccc;
        opacity: 0.2
      }

      .seat{
        font-size: 13px;
        display: flex;
        flex-direction: row;

        justify-content: space-around;
        line-height: 13px;
      }

      .seat text{

        color:rgb(76, 172, 201);
      }

      .no{
        color:#999999;
        margin-right: 10px;
      }
      .yes{
        margin-left: 10px;
      }

